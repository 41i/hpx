<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup Label="UserMacros">
    <BOOST_ROOT>$(HPX_BOOST_ROOT)</BOOST_ROOT>
    <TBB_ROOT>$(HPX_TBB_ROOT)</TBB_ROOT>
  </PropertyGroup>
  <Choose>
    <When Condition=" '$(Configuration)'=='Debug' ">
      <PropertyGroup>
        <ConfigurationSuffix>d</ConfigurationSuffix>
      </PropertyGroup>
    </When>
    <When Condition=" '$(Configuration)'=='Release' ">
      <PropertyGroup>
        <ConfigurationSuffix>
        </ConfigurationSuffix>
      </PropertyGroup>
    </When>
  </Choose>
  <PropertyGroup>
    <_ProjectFileVersion>10.0.21006.1</_ProjectFileVersion>
    <TargetName>$(ProjectName)$(ConfigurationSuffix)</TargetName>
    <CustomBuildAfterTargets>PostBuildEvent</CustomBuildAfterTargets>
    <OutDir>$(Configuration)\</OutDir>
  </PropertyGroup>
  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>$(TBB_ROOT)\include;$(BOOST_ROOT);$(HPX_ROOT);$(HPX_ROOT)\external\cache;$(HPX_ROOT)\external\chrono;$(HPX_ROOT)\external\coroutine;$(HPX_ROOT)\external\endian;$(HPX_ROOT)\external\singleton;$(HPX_ROOT)\external\function_types;$(HPX_ROOT)\external\math;$(HPX_ROOT)\external\logging;$(HPX_ROOT)\external\exception;$(HPX_ROOT)\external\lockfree;$(HPX_ROOT)\external\plugin;$(HPX_ROOT)\external\dataflow;%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
      <PreprocessorDefinitions>_WIN32_WINNT=0x0501;_CRT_SECURE_NO_WARNINGS;_SCL_SECURE_NO_WARNINGS;_CRT_SECURE_NO_DEPRECATE;_SCL_SECURE_NO_DEPRECATE;_CRT_NONSTDC_NO_WARNINGS;HPX_PREFIX="$(HPX_ROOT)/bin";HPX_USE_TBB=0;HPX_USE_LOCKFREE=1;BOOST_SERIALIZATION_DYN_LINK;BOOST_COROUTINE_USE_ATOMIC_COUNT;BOOST_CHRONO_NO_LIB;BOOST_USE_WINDOWS_H;%(PreprocessorDefinitions)</PreprocessorDefinitions>
      <DisableSpecificWarnings>4267;4503;4251;4275;4094;4180;4244;%(DisableSpecificWarnings)</DisableSpecificWarnings>
      <PrecompiledHeaderOutputFile>$(IntDir)$(TargetName).pch</PrecompiledHeaderOutputFile>
    </ClCompile>
    <CustomBuildStep>
      <Command>if not exist "$(HPX_ROOT)\bin" mkdir "$(HPX_ROOT)\bin"
if not exist "$(HPX_ROOT)\bin\lib" mkdir "$(HPX_ROOT)\bin\lib"
if not exist "$(HPX_ROOT)\bin\libs" mkdir "$(HPX_ROOT)\bin\libs"
xcopy /Y/F "$(TargetPath)" "$(HPX_ROOT)\bin\lib"
xcopy /Y/F "$(TargetDir)\$(TargetName).pdb" "$(HPX_ROOT)\bin\lib"
xcopy /Y/F "$(TargetDir)\$(TargetName).lib" "$(HPX_ROOT)\bin\libs"
</Command>
      <Inputs>$(TargetPath)</Inputs>
      <Outputs>$(HPX_ROOT)\bin\lib\$(TargetFileName);$(HPX_ROOT)\bin\lib\$(TargetName).pdb</Outputs>
    </CustomBuildStep>
    <Link>
      <AdditionalLibraryDirectories>$(BOOST_ROOT)\stage\lib;$(TBB_ROOT)\ia32\vc8\lib;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
      <OutputFile>$(OutDir)$(TargetName)$(TargetExt)</OutputFile>
      <ProgramDatabaseFile>$(TargetDir)$(TargetName).pdb</ProgramDatabaseFile>
      <ManifestFile>$(IntDir)$(TargetName)$(TargetExt).intermediate.manifest</ManifestFile>
      <ProfileGuidedDatabase>$(TargetDir)$(TargetName).pgd</ProfileGuidedDatabase>
    </Link>
  </ItemDefinitionGroup>
  <ItemGroup>
    <BuildMacro Include="BOOST_ROOT">
      <Value>$(BOOST_ROOT)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
    <BuildMacro Include="HPX_ROOT">
      <Value>$(HPX_ROOT)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
    <BuildMacro Include="TBB_ROOT">
      <Value>$(TBB_ROOT)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
  </ItemGroup>
</Project>